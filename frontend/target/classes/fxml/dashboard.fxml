<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox fx:id="dashboardRoot" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.inventory.controller.DashboardController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Label styleClass="page-title" text="Dashboard">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#handleRefresh" styleClass="primary-button" text="🔄 Refresh" />
            <Button mnemonicParsing="false" onAction="#handleAddProduct" styleClass="success-button" text="➕ Add Product" />
         </children>
      </HBox>
      
      <!-- Statistics Cards -->
      <GridPane hgap="20.0" vgap="20.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <!-- Total Products Card -->
            <VBox alignment="CENTER" styleClass="stats-card">
               <children>
                  <Label fx:id="totalProductsLabel" styleClass="stats-number" text="0">
                     <font>
                        <Font name="System Bold" size="32.0" />
                     </font>
                  </Label>
                  <Label styleClass="stats-label" text="Total Products">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
            
            <!-- Total Categories Card -->
            <VBox alignment="CENTER" styleClass="stats-card" GridPane.columnIndex="1">
               <children>
                  <Label fx:id="totalCategoriesLabel" styleClass="stats-number" text="0">
                     <font>
                        <Font name="System Bold" size="32.0" />
                     </font>
                  </Label>
                  <Label styleClass="stats-label" text="Categories">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
            
            <!-- Low Stock Card -->
            <VBox alignment="CENTER" styleClass="stats-card warning-card" GridPane.columnIndex="2" onMouseClicked="#handleLowStockAlert">
               <children>
                  <Label fx:id="lowStockCountLabel" styleClass="stats-number" text="0">
                     <font>
                        <Font name="System Bold" size="32.0" />
                     </font>
                  </Label>
                  <Label styleClass="stats-label" text="Low Stock Items">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="lowStockPercentageLabel" styleClass="stats-sublabel" text="0.0%">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
            
            <!-- Total Value Card -->
            <VBox alignment="CENTER" styleClass="stats-card success-card" GridPane.columnIndex="3">
               <children>
                  <Label fx:id="totalValueLabel" styleClass="stats-number" text="$0.00">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Label>
                  <Label styleClass="stats-label" text="Total Inventory Value">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
            
            <!-- Recent Products Card -->
            <VBox alignment="CENTER" styleClass="stats-card info-card" GridPane.rowIndex="1">
               <children>
                  <Label fx:id="recentProductsLabel" styleClass="stats-number" text="0">
                     <font>
                        <Font name="System Bold" size="32.0" />
                     </font>
                  </Label>
                  <Label styleClass="stats-label" text="Added This Week">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
            
            <!-- Quick Actions Card -->
            <VBox alignment="CENTER" spacing="10.0" styleClass="stats-card" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="1">
               <children>
                  <Label styleClass="stats-label" text="Quick Actions">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER" spacing="15.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleViewProducts" styleClass="secondary-button" text="📦 View All Products" />
                        <Button mnemonicParsing="false" onAction="#handleAddProduct" styleClass="success-button" text="➕ Add Product" />
                        <Button mnemonicParsing="false" onAction="#handleLowStockAlert" styleClass="warning-button" text="⚠️ Low Stock Items" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
         </children>
      </GridPane>
      
      <!-- Charts Section -->
      <HBox spacing="20.0" VBox.vgrow="ALWAYS">
         <children>
            <!-- Category Distribution Chart -->
            <VBox styleClass="chart-container" HBox.hgrow="ALWAYS">
               <children>
                  <Label styleClass="chart-title" text="Products by Category">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <PieChart fx:id="categoryPieChart" prefHeight="300.0" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            
            <!-- Stock Levels Chart -->
            <VBox styleClass="chart-container" HBox.hgrow="ALWAYS">
               <children>
                  <Label styleClass="chart-title" text="Stock Levels by Category">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Label>
                  <BarChart fx:id="stockLevelChart" prefHeight="300.0" VBox.vgrow="ALWAYS">
                     <xAxis>
                        <CategoryAxis side="BOTTOM" />
                     </xAxis>
                     <yAxis>
                        <NumberAxis side="LEFT" />
                     </yAxis>
                  </BarChart>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
